{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format

  "version": "2.0.0",
  "tasks": [
    // 直接运行该cpp文件
    {
      "label": "Run C/C++ file",
      "type": "shell",
      "command": "${workspaceFolder}/build/target/${fileBasenameNoExtension}",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": ["C/C++ build"],
      // 运行后自动关闭终端
      "presentation": {
        "reveal": "always",
        "focus": false,
        "echo": false,
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "C/C++ build",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/build/target && g++ -std=c++14 -g ${file} -o ${workspaceFolder}/build/target/${fileBasenameNoExtension}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
